{
  "compilerOptions": {
    /* Base Options: */
    "skipLibCheck": true, //Skip node_modules type checking
    "target": "es2022", //Compile target
    "lib": ["es2022"], //Tell TypeScript what built-in types to include
    "jsx": "react-jsx",
    "sourceMap": true,

    /* Module system: */
    "moduleDetection":"force",
    "esModuleInterop": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "isolatedModules": true,
    "verbatimModuleSyntax":true,

    /* Import options: */
    "allowJs": true, //Allow import .js
    "resolveJsonModule": true, //Allow import .json
    "allowSyntheticDefaultImports": true,

    /* Strictness: */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": false,

    /* Directory */
    "outDir": "dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "src/types/index.d.ts", "src/types/vitest.d.ts"]
}
